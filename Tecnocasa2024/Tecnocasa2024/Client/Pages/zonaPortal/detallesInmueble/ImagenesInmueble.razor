<div class="container">
    <div class="row m-4">
        <div class="col-8">
            <img src="@this.GaleriaFotos[0]" style="width: 100%; height: 98%; cursor: pointer; border-radius: 20px;" alt="imagen principal inmueble">
        </div>
        <div class="col-4 d-flex flex-column justify-content-between">
            @for (int item=1; item<=3; item++)
            {
                <div class="mb-2" style="width: 310px; height: 200px;">
                    <img src="@this.GaleriaFotos[item]" style="width: 100%; height: 95%; border-radius: 20px; cursor: pointer;" alt="imagenes inmueble">
                    @if (item == 3)
                    {
                        <div class="image_count"><img src="/images/ico_photo.png" style="width: 46px; height: 40px;">+@this.GaleriaFotos.Count</div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<string> GaleriaFotos { get; set; } = new List<string>();
}
